<p style="color: green"><%= notice %></p>

<h1>Taxes</h1>

<div id="taxes">
  <table class="table table-striped table-hover">
    <thead class="table table-dark">
    <tr>
      <th>Gross Income</th>
      <th>Tax Deduction</th>
      <th>EPF Deduction</th>
      <th>Employer EPF Contribution</th>
      <th>Net Income</th>
      <th colspan="2"></th>
    </tr>
    </thead>

    <tbody >
    <% @taxes.each do |tax| %>
      <% cache tax do %>
      <tr>
        <td><%= tax.grossincome %></td>
        <td><%= tax.taxdeduction %></td>
        <td><%= tax.epfdeduction %></td>
        <td><%= tax.employerepfcontribution %></td>
        <td><%= tax.netincome %></td>
        <td><%= link_to "Show", tax %></td>
      </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>





</div>


